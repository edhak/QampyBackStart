
  <div class="row ">
    {{>navSliderUsers}}
<!-- fila izquierda       -->
    <div class="col mt-4">
      <h1>Datos Complementarios</h1>

      <form action="/perfilUserDatos2" method="POST">
        <div class="form-group">
          <label for="fechaNacimiento">Fecha De Nacimiento :</label>
          <input id="fechaNacimiento"type="date" name="fechaNacimiento"  min="1800-11-11" max="2000-11-11">
        </div>

        <div class="form-group">
          <label for="dni">Numero de DNI :</label>
          <input type="text" name="dni" value="{{dni}}"class="form-control" id="dni" placeholder="DNI">
        </div>

        <div class="form-group">
          <label for="">Estado :</label>

          {{#if estadoCivilBool }}
            <div class="radio">
              <label><input type="radio" name="estadoCivil" value="casado" checked>Casado</label>
            </div>
            <div class="radio">
              <label><input type="radio" name="estadoCivil" value="soltero">Soltero</label>
            </div>
            </div>
          {{else}}
            <div class="radio">
              <label><input type="radio" name="estadoCivil" value="casado" >Casado</label>
            </div>
            <div class="radio">
              <label><input type="radio" name="estadoCivil" value="soltero" checked>Soltero</label>
            </div>
            </div>
          {{/if}}

        <div class="form-group">
          <label for="nummeroTelefono">Telefono :</label>
          <input type="text" name="numeroTelefono" value="{{numeroTelefono}}" class="form-control" id="nummeroTelefono" placeholder="Telefono">
        </div>

        <div class="form-group">
          <label for="numeroCelular">Celular :</label>
          <input name="numeroCelular" value="{{numeroCelular}}"type="text" class="form-control" id="numeroCelular" placeholder="Celular">
        </div>

        <div class="row py-2">
          <button class="btn btn-primary mx-auto" type="submit" >Actualizar datos</button>
        </div>
      </form>
    </div>
<!-- fin fila izquierda -->
<!-- lado derecho -->
    <div class="col mt-4">
<!-- primer card de informacion -->
